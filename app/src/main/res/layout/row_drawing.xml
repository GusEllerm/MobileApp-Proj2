<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout2">

    <TextView
            android:text="TextView"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/rowTitleText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/rowPreviewImage" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/rowVotesText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowTitleText" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/rowPreviewImage" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/rowCategoryText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowVotesText" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/rowPreviewImage" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/add_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voteButton"
            app:layout_constraintTop_toBottomOf="@+id/rowCategoryText"
            app:layout_constraintStart_toStartOf="@+id/rowCategoryText"/>
    <ImageView
            android:layout_width="165dp"
            android:layout_height="165dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/rowPreviewImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>