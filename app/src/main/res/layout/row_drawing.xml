<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout2">

    <TextView
            android:text="TextView"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/rowTitleText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/rowVotesText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowTitleText" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:id="@+id/rowCategoryText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rowVotesText" android:textSize="18sp"
    />
    <Button
            android:text="@string/add_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voteButton"
            app:layout_constraintTop_toBottomOf="@+id/rowCategoryText"
            app:layout_constraintStart_toStartOf="@+id/rowCategoryText"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="174dp"
            android:layout_height="141dp"
            android:id="@+id/mapView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>